<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href='loginCalendar.css' rel='stylesheet' />
    <link rel='icon' href='photos/favicon.ico' type='image/x-icon'/ >
    <script src="http://code.jquery.com/jquery-2.2.1.js"></script>

    <title>Git'r Done Calendar</title>
  </head>
  <body class="d-flex flex-column justify-content-center align-items-center eventBody">
    <div class="d-flex flex-column col-6 justify-content-around back eventForm" id="pageDiv">
      <div class="w-100 d-flex justify-content-between align-items-center">
        <h1 id="login">Add Event</h1>
        <div class="d-flex">
          <p>Hi, &nbsp</p>
          <p class="mr-3"><%= name %></p>
          <a href='/myEvents' class="mr-3 myEvents">My Events</a>
          <a href='/logout' class="newUser">Logout</a>
        </div>
      </div>
      <% if (message === 'Failed to Add Event') { %>
        <p class="badmessage"><%- message %></p>
      <% } %>
      <% if (message === 'Successfully Added Event') { %>
          <p class="goodmessage"><%- message %></p>
      <% } %>
      <% if (message === 'You do not have any events yet') { %>
          <p class="badmessage"><%- message %></p>
      <% } %>
      <form class="w-100" id="form" method="post" action="/addEvent">
        <div class="form-group" id="email">
          <label for="EventName">Event Name</label>
          <input type="text" class="form-control" id="EventName" placeholder="Enter event name" name="event" required>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input type="text" class="form-control" id="location" placeholder="Enter Location" name="location" required>
          <small id="emailHelp" class="form-text text-muted">City, State (State Abbreviations are acceptable)</small>
        </div>
        <div class="form-group w-50">
          <label for="date">Date</label>
          <input type="date" class="form-control" id="date" name="date" required>
        </div>
        <div class="d-flex">
          <div class="form-group w-25">
            <label for="stime">Start Time</label>
            <input type="time" class="form-control" id="stime" name="stime" required>
          </div>
          <div class="form-group w-25">
            <label for="etime">End Time</label>
            <input type="time" class="form-control" id="etime" name="etime" required>
          </div>
        </div>
        <input type="hidden" name="temp" id="hiddenInput1" />
        <input type="hidden" name="icon" id="hiddenInput2" />
        <input type="hidden" name="sum" id="hiddenInput3" />
        <div class="d-flex">
          <button type="submit" class="btn btn-primary" id="button" onclick="longLat()">Add Event</button>
        </div>
      </form>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
<!--     <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script type="text/javascript" src="loginCalendar.js"></script>
  </body>
</html>